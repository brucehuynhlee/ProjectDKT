@model ProjectDKT.Models.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "News", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
